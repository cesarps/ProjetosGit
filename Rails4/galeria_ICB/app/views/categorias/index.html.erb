<h1>Categorias</h1>

<table class="table table-condensed">
  <thead>
    <tr>
      <th class="text-center">Nome</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @categorias.each do |categoria| %>
      <tr>
        <td class="text-center"><%= categoria.nome %></td>
        <td class="text-center"><%= link_to 'Mostrar', categoria, class: 'btn btn-default' %></td>
        <td class="text-center"><%= link_to 'Editar', edit_categoria_path(categoria), class: 'btn btn-primary active' %></td>
        <td class="text-center"><%= link_to 'Apagar', categoria, method: :delete, data: { confirm: 'Tem certeza?' }, class: 'btn btn-danger active' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nova Categoria', new_categoria_path, class: 'btn btn-primary active' %>
