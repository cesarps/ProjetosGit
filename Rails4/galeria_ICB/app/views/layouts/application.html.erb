<!DOCTYPE html>
<html>
<head>
  <title>GaleriaIcb</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <%= csrf_meta_tags %>
</head>
<body>



<header>
  <div id="header-wrap">

  </div>
</header>

<nav class="navbar navbar-default  ">
  <div class="container-fluid ">
    <h2 class="navbar-text" align="center"> <span id="titulo"> Galeria ICB </span> </h2>
    <div class="collapse navbar-collapse">
      <ul class="nav navbar-nav">
        <li> <%= link_to "Coleção", colecao_index_path %></li>
        <%  if session[:login].blank?  %>
            <li> <%= link_to "Login" , welcome_login_path %> </li>
         <% else %>
            <% if session[:perfil].include? "Administrador" %>
                <li class="dropdown">
                  <a href="#" class="dropdown-toggle" data-toggle="dropdown"> Área de gerenciamento &nbsp <b class="caret"></b> </a>
                  <ul class="dropdown-menu" role="menu">
                    <li> <%= link_to "Albuns", albuns_path %>  </li>
                    <li> <%= link_to "Categorias", categorias_path %>  </li>
                    <li> <%= link_to "Departamentos", departamentos_path %>  </li>
                    <li> <%= link_to "Usuários", usuarios_path %></li>
                    <li> <%= link_to "Logs", logs_path %></li>
                    <li> <%= link_to "Perfil", perfils_path %></li>
                    <li> <%= link_to "Permitidos", permitidos_path %></li>
                    <li class="lead"> <%= link_to "Sair" , logout_path %></li>
            <% else %>
                <li class="lead"> <%= link_to "Sair" , logout_path %></li>
                <% end %>
            <% end %>
          </ul>
        </li>
      </ul>
  </div>
  </div>
</nav>

<!-- The Bootstrap Image Gallery lightbox, should be a child element of the document body -->
<div id="blueimp-gallery" class="blueimp-gallery">

  <!-- The container for the modal slides -->
  <div class="slides"></div>
  <!-- Controls for the borderless lightbox -->
  <h3 class="title">  </h3>
  <a class="prev">‹</a>
  <a class="next">›</a>
  <a class="close">×</a>
  <a class="play-pause"></a>
  <ol class="indicator"></ol>
  <!-- The modal dialog, which will be used to wrap the lightbox content -->
  <div class="modal fade">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" aria-hidden="true">&times;</button>
          <h4 class="modal-title"></h4>
        </div>
        <div class="modal-body next"></div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default pull-left prev">
            Anterior
          </button>
          <button type="button" class="btn btn-primary next">
            Próximo
          </button>
        </div>
      </div>
    </div>
  </div>
</div>


<% if notice.present? %>
    <div class="alert alert-info">
      <%= notice %>
    </div>
<% end %>

<div class="container-fluid ">
  <%= yield %>
</div>


<div class="container-fluid">
<nav class="navbar navbar-default  navbar-collapse">
  <h6 align="center">  Recomenda-se o Google Chrome para uso desse sistema </h6>
</nav>
</div>


</body>
</html>
