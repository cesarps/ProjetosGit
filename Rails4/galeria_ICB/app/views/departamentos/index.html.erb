<h1>Departamentos</h1>

<table class="table table-bordered">
  <thead>
    <tr>
      <th class="text-center">Nome</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @departamentos.each do |departamento| %>
      <tr>
        <td><%= departamento.nome %></td>
        <td class="text-center"><%= link_to 'Mostrar', departamento, class: 'btn btn-default' %></td>
        <td class="text-center"><%= link_to 'Editar', edit_departamento_path(departamento), class: 'btn btn-primary active' %></td>
        <td class="text-center"><%= link_to 'Apagar', departamento, method: :delete, data: { confirm: 'Tem certeza?' }, class: 'btn btn-danger active' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Novo Departamento', new_departamento_path, class: 'btn btn-primary active' %>