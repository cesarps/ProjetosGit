<h1> Galerias de fotos</h1>

<div class="row">
  <div class="col-md-8">
    <div class="panel panel-default">
      <div class="row">

        <% @album.each do |al| %>
            <% @capa = al.capa %>
            <%   @foto = Foto.find(@capa)  unless @capa.nil? %>
            <div class="col-md-2">
              <%= link_to(image_tag(@foto.arquivo_url, size: "200x200"), mostrar_path(al)) %>
              <p><%= al.nome_evento_assunto %> (<%= al.fotos.count %> fotos)</p>
            </div>
        <% end %>
      </div>
    </div>
  </div>
</div>


<%= link_to "Voltar", colecao_index_path, class: "btn btn-primary active" %>